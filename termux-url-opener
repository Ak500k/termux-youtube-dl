  read INPUT_STRING
  case $INPUT_STRING in

	  1)
		echo "$command --no-mtime -o /data/data/com.termux/files/home/storage/shared/YouTube/%(title)s.%(ext)s -f 'bestaudio[ext=mp3]' --audio-format mp3" > ~/.config/youtube-dl/config #option 1
